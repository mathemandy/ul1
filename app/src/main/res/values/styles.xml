<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/ic_dashboard</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLightStatusBar" tools:targetAi="m" tools:targetApi="m">true</item>
        <item name="colorOnPrimary">#222222</item>
<!--        <item name="android:windowTranslucentStatus">true</item>-->
<!--        <item name="android:windowTranslucentNavigation">true</item>-->

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="fontFamily">@font/itim</item>
    </style>


    <style name="progressbarStyle">
        <item name="android:layout_width">@dimen/_24sdp</item>
        <item name="android:layout_height">@dimen/_24sdp</item>
    </style>

    <style name="progressbarStyleSmall">
        <item name="android:layout_width">@dimen/_12sdp</item>
        <item name="android:layout_height">@dimen/_12sdp</item>
    </style>


    <style name="Ulesson.TextAppearance.CollapsingToolbar.Expanded" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="fontFamily">@font/mulish_bold</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="fontWeight">800</item>
        <item name="android:textSize">@dimen/headline_text_size</item>
    </style>

    <style name="Ulesson.TextAppearance.CollapsingToolbar.Collapsed" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="fontFamily">@font/mulish_bold</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="fontWeight">700</item>
        <item name="android:textSize">@dimen/sub_headline_text_size</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/primary_text_color</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="fontWeight">800</item>
        <item name="android:textSize">@dimen/sub_headline_text_size</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>
</resources>